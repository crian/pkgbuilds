# Maintainer: crian <crian84@gmail.com>

pkgname=slock-crian-git
pkgver=r127.3cf21da
pkgrel=1
pkgdesc='A simple X display locker'
arch=('x86_64')
url="https://github.com/crian/suckless"
license=('MIT')
depends=('libxrandr')
conflicts=('slock')
provides=('slock')
source=("git+${url}.git#branch=slock")
sha256sums=('SKIP')

pkgver() {
    cd "$srcdir/suckless"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
    cd "$srcdir/suckless"
    echo 'Copying config.h from $startdir if it exists...'
    [ -f "${startdir}/config.h" ] && cp "${startdir}/config.h" . || true
}

package() {
    cd "$srcdir/suckless"
    make PREFIX=/usr DESTDIR="$pkgdir" install
    install -m644 -D LICENSE "$pkgdir/usr/share/licenses/slock/LICENSE"
    install -m644 -D README "$pkgdir/usr/share/doc/slock/README"
}
